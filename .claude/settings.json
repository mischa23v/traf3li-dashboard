{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/clean_commit_guard.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/protect_claude_md.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/centralized_constants_guard.py"
          }
        ]
      },
      {
        "matcher": "mcp__github__|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/github_issue_guard.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/emoji_remover.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/rtl_check.py"
          }
        ]
      }
    ]
  }
}
